                @Html.ActionLink("Create", "Edit", "Article", new {@class = "btn btn-success"})
            </div>
        </div>
    </div>
</div>

<div id="user-list-articles">
    <div class="row">
        @{ Html.RenderAction("ArticleList"); }
    </div>
</div>

