@using System.Web.Mvc.Html
@model KoalaCode.BL.Areas.Admin.Models.User.EditUserModel

@{
    ViewBag.Title = Model.Id == 0 ? "Create" : "Edit";
}

<h2>@ViewBag.Title</h2>

